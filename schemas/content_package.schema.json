{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["meta", "global", "locales"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["translationKey", "createdAt", "source"],
      "properties": {
        "translationKey": {"type": "string"},
        "createdAt": {"type": "string"},
        "source": {"type": "string", "enum": ["creator", "translator", "manual"]}
      }
    },
    "global": {
      "type": "object",
      "required": ["author", "blogUrl", "linkPolicy"],
      "properties": {
        "author": {"type": "string"},
        "blogUrl": {"type": "string"},
        "linkPolicy": {"type": "string", "enum": ["no-links", "blog-only", "blog-and-affiliate"]}
      }
    },
    "locales": {
      "type": "object",
      "properties": {
        "en": {"type": "object"},
        "pt": {"type": "object"},
        "es": {"type": "object"},
        "it": {"type": "object"}
      }
    }
  }
}
